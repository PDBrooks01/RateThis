<%- include('./partials/header.ejs') %>
  <%- include('./partials/nav.ejs') %>

    <div class="top">
      <h3>Editing <%=dogtoy.name%> </h3>
    </div>
    <form class="editForm" action="/ratethis/<%=dogtoy.id%>?_method=PUT" method="POST" enctype="multipart/form-data">
      <label>
        <span>Name of Toy:</span>
        <input type="text" name="name" value="<%=dogtoy.name%>"/>
      </label>

      <label>
        <span>Brand of Toy:</span>
        <input type="text" name="brand" value="<%=dogtoy.brand%>"/>
      </label>

      <label>
        <span>Image of Toy:</span>
        <!-- <input type="text" name="img" value="<%=dogtoy.img%>"/> -->
       <input type="file" name="img" >
      </label>

      <label>
        <span>Size of Dog:</span>
        <input type="number" name="size" value="<%=dogtoy.size%>"/>
      </label>
      <br>
      <input class="button" type="submit" value="Update Toy"/>
    </form>

    <a href="/ratethis/<%=dogtoy.id%>" class="back-button" >Back</a>

<%- include('./partials/footer.ejs') %>
